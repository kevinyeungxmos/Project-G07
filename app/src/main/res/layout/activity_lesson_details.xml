<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LessonDetailsActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="#0B8C59"
        android:orientation="horizontal">


        <ImageButton
            android:id="@+id/imageButtonLD"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#0B8C59"
            app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            app:srcCompat="@drawable/logo_nobackground" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tvCourseCode"
        android:layout_width="50dp"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="#AE000000"
        android:text="Code: " />

    <TextView
        android:id="@+id/tvCourseName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:textColor="@color/black"
        android:text="Lesson Name:" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvCourseLength"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Length:"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description:"
        android:layout_margin="5dp"/>

<!--    <WebView-->
<!--        android:id="@+id/wvLink"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="150dp" />-->

    <Button
        android:id="@+id/btnWatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Watch Lesson ..."
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#1AA9B1"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tvNotes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take notes:"
        android:layout_margin="5dp"/>


    <EditText
        android:id="@+id/etNotes"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:ems="10"
        android:gravity="start|top"
        android:background="@drawable/edittext_border"
        android:inputType="textMultiLine"
        android:layout_margin="5dp"/>



    <CheckBox
        android:id="@+id/chbComplete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I complete this lesson"
        android:layout_margin="5dp"/>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        android:textSize="20dp"
        android:layout_margin="5dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/purple_500"
        android:textColor="@color/white"/>

</LinearLayout>
